{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./"],
      "src/*": ["./src/*"]
    },
    "isolatedModules": false,
  },
  "include": [
    "./src",
    "./src/setupTests.ts",
  ],
  "exclude": [
    "./node_modules"
  ]
}
